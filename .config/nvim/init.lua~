vim.g.mapleader = ' '

vim.opt.tabstop=4
vim.opt.shiftwidth=4
vim.opt.softtabstop=4
vim.opt.number = true

vim.keymap.set({ "n", "v" }, "<leader>y", '"+y')

vim.opt.background = "dark"
vim.opt.termguicolors = true

vim.opt.swapfile = false
vim.opt.undofile = true

require("config.lazy")
require("config.autocmd")
